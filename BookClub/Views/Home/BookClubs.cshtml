@model IEnumerable<BookClub.Core.BookClub>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Book Clubs</title>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    @*<div class="btn btn-success btnTextColor">
        @Html.ActionLink("Add Book Club", "Create")
    </div>*@
        <a href="#bookClubModal" class="btn btn-success btnTextColor">ADD Book Club</a>
        <div id="bookClubModal" class="modalDialog">
            <div>
                <table class="center">
                    <tr>
                        <td style="text-align: center;">
                            @*<a href="#close" class="btn btn-success btnTextColor" onclick="@("location.href='"
        + Url.Action("AddBookClub", "Home", new { newBookClubName = "Sunday Readers" })
        + "'")">SAVE</a>*@
                            <a href="#close" class="btn btn-success btnTextColor" onclick="saveNewBookClub()" >SAVE</a>
                            <br />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="form-group formWider">
                                @Html.Editor("NewBookClubName", new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </td>
                    </tr>
                
                </table>
            </div>
        </div>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BookClubName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookClubName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.BookClubId })
                    </td>
                </tr>
            }

        </table>
    </body>
</html>
<script>
    $(document).ready(function () {
    });
    function saveNewBookClub() {
        var newBookClubName = $("#NewBookClubName").val();
        $.ajax({
            url: '/Home/AddBookClub/',
            data: {
                newBookClubName: newBookClubName,
            },
            type: "POST",
            success: function () {
                window.location.reload()
            },
        });
    }
 
</script>

